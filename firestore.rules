rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated service accounts to access processed_calls collection
    match /processed_calls/{document} {
      allow read, write: if request.auth != null 
        && request.auth.token.email != null
        && request.auth.token.email.matches('.*@.*.iam.gserviceaccount.com');
    }
    
    // Allow authenticated service accounts to access active_tickets collection  
    match /active_tickets/{document} {
      allow read, write: if request.auth != null
        && request.auth.token.email != null 
        && request.auth.token.email.matches('.*@.*.iam.gserviceaccount.com');
    }
    
    // Additional validation rules
    match /processed_calls/{document} {
      allow create: if request.auth != null
        && resource == null
        && request.resource.data.keys().hasAll(['timestamp', 'event', 'call_id'])
        && request.resource.data.event is string
        && request.resource.data.call_id is string
        && request.resource.data.timestamp is timestamp;
      
      allow read: if request.auth != null;
      
      // Don't allow updates or deletes for audit trail
      allow update, delete: if false;
    }
    
    match /active_tickets/{document} {
      allow create, update, delete: if request.auth != null
        && request.auth.token.email != null
        && request.auth.token.email.matches('.*@.*.iam.gserviceaccount.com');
      
      allow read: if request.auth != null;
      
      // Validate data structure for active tickets
      allow write: if request.auth != null
        && (resource == null || resource.data.keys().hasAll(['ticket_id', 'timestamp']))
        && request.resource.data.ticket_id is number
        && request.resource.data.timestamp is timestamp;
    }
  }
}
